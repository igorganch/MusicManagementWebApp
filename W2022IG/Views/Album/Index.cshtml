            @Html.DisplayFor(modelItem => item.ReleaseDate)
        </td>
        <td>
            <img src="@Html.DisplayFor(modelItem => item.UrlAlbum)" style="width: 25%; height: 25%" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Coordinator)
        </td>
